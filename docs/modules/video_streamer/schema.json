{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "RawActionRecord",
    "type": "object",
    "required": [
        "schema_version",
        "record_id",
        "user_id",
        "session_id",
        "timestamp",
        "modality",
        "source",
        "raw_features_ref"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "record_id": {
            "type": "string",
            "format": "uuid"
        },
        "user_id": {
            "type": "string"
        },
        "session_id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "modality": {
            "type": "string",
            "enum": [
                "gesture"
            ]
        },
        "source": {
            "type": "string",
            "enum": [
                "communicator",
                "caregiver"
            ]
        },
        "device_id": {
            "type": "string"
        },
        "frame_index": {
            "type": "integer",
            "minimum": 0
        },
        "sequence_id": {
            "type": "string"
        },
        "vector_version": {
            "type": "string"
        },
        "raw_features_ref": {
            "type": "object",
            "required": [
                "uri",
                "hash",
                "encoding",
                "dims",
                "format"
            ],
            "properties": {
                "uri": {
                    "type": "string"
                },
                "hash": {
                    "type": "string",
                    "pattern": "^sha256:[a-fA-F0-9]{64}$"
                },
                "encoding": {
                    "type": "string"
                },
                "dims": {
                    "type": "integer",
                    "minimum": 1
                },
                "format": {
                    "type": "string",
                    "enum": [
                        "parquet",
                        "json",
                        "npy"
                    ]
                }
            }
        },
        "intent_label": {
            "type": "string",
            "description": "Optional intent label provided by caregiver or annotator"
        },
        "label_status": {
            "type": "string",
            "enum": [
                "unconfirmed",
                "confirmed",
                "corrected"
            ]
        }
    },
    "additionalProperties": false
}
