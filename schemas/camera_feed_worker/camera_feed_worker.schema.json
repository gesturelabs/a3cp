{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://gesturelabs.org/schemas/camera_feed_worker/camera_feed_worker.schema.json",
    "title": "CameraFeedWorker Schema",
    "description": "Configuration and output metadata schema for CameraFeedWorker module.",
    "type": "object",
    "oneOf": [
        {
            "$ref": "#/$defs/CameraFeedWorkerConfig"
        },
        {
            "$ref": "#/$defs/CameraFrameMetadata"
        }
    ],
    "$defs": {
        "CameraFeedWorkerConfig": {
            "type": "object",
            "description": "Configuration for the video capture device.",
            "properties": {
                "device_id": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Video device path or index, e.g., '/dev/video0' or '0'"
                },
                "resolution": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    },
                    "minItems": 2,
                    "maxItems": 2,
                    "description": "Target resolution as [width, height], e.g., [640, 480]"
                },
                "fps": {
                    "type": "integer",
                    "description": "Target capture frame rate in frames per second"
                }
            },
            "required": [
                "resolution",
                "fps"
            ],
            "additionalProperties": false
        },
        "CameraFrameMetadata": {
            "type": "object",
            "description": "Metadata for a captured video frame.",
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time",
                    "description": "UTC ISO 8601 timestamp of video frame capture"
                },
                "device_id": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Optional device ID used for capture"
                },
                "modality": {
                    "type": "string",
                    "const": "image",
                    "description": "Fixed value 'image'"
                },
                "source": {
                    "type": "string",
                    "const": "communicator",
                    "description": "Fixed value 'communicator'"
                },
                "frame_index": {
                    "type": [
                        "integer",
                        "null"
                    ],
                    "description": "Optional frame index within the current segment"
                },
                "stream_segment_id": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Optional ID for stream segmentation"
                },
                "error": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "Optional error message if capture failed"
                }
            },
            "required": [
                "timestamp",
                "modality",
                "source"
            ],
            "additionalProperties": false
        }
    }
}
